<section class="orders light-section bg-gray-100 text-gray-800">
    <div class="container mx-auto pt-4 md:pt-12">

      <% if(messages.success) { %>
      <div id="success-alert" class="flex items-center text-white text-sm font-bold px-4 py-3 mb-5 rounded"
          role="alert">
          <svg class="fill-current w-4 h-4 mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
              <path
                  d="M12.432 0c1.34 0 2.01.912 2.01 1.957 0 1.305-1.164 2.512-2.679 2.512-1.269 0-2.009-.75-1.974-1.99C9.789 1.436 10.67 0 12.432 0zM8.309 20c-1.058 0-1.833-.652-1.093-3.524l1.214-5.092c.211-.814.246-1.141 0-1.141-.317 0-1.689.562-2.502 1.117l-.528-.88c2.572-2.186 5.531-3.467 6.801-3.467 1.057 0 1.233 1.273.705 3.23l-1.391 5.352c-.246.945-.141 1.271.106 1.271.317 0 1.357-.392 2.379-1.207l.6.814C12.098 19.02 9.365 20 8.309 20z" />
          </svg>
          <p><%= messages.success %></p>
      </div>
      <% } %>

              <h1 class="font-bold text-lg mb-4 choose-title">Cancelled Orders</h1>

              <div class="flex flex-col md:flex-row flex-wrap">
                <% if(orders.length) { %>
                <% orders.forEach((order) => { %>
                    <div class="rounded shadow-md bg-white py-3 mb-3 sm:py-4 sm:px-8 md:ml-3">
                      <div class="px-4 pb-2 font-bold text-lg border-b">
                          <a class="link bg-gray-100 py-1 rounded-full px-4 text-green-600 font-bold" href="/customer/orders/<%= order._id %>"><span>Order Number: </span><%= String(order._id).substring(19,24) %></a>
                      </div>
                      <div class="px-4 pt-2">
                          Event: <%= order.eventtype %>
                      </div>
                      <div class="px-4">
                          Venue: <%= order.address %>
                      </div>
                      <div class="px-4">
                          Date & Time: <%= moment(order.datetime).format('Do MMMM YYYY @ hh:mm A') %>
                      </div>
                    </div>

                <% }) %>
                <% } else { %>
                <div class="rounded-xl shadow-md px-4 py-2 font-bold capitalize">
                    <p class="p-4"><span>No orders found!</span></p>
                </div>
                <% } %>
              </div>
    </div>
</section>
