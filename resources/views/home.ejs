  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-y-10 gap-x-10">

      <% items.forEach( item => { %>
        <% if(item.category === 'drinks') {%>
      <div class="w-full md:w-64 rounded shadow-md bg-white-100 py-6">
          <img class="h-40 mb-4 mx-auto rounded-full" src="/img/<%= item.image %>" alt="">
          <div class="text-center">
              <h2 class="mb-4 text-lg"><%= item.name %></h2>
              <span class="size py-1 px-4 rounded-full uppercase text-xs bg-blue-500 text-white"><%= item.category %></span>
              <div class="flex items-center justify-around mt-6">
                  <span class="font-bold text-lg">₹<%= item.price %><em class="text-sm">/Plate</em></span>
                  <button data-item="<%= JSON.stringify(item) %>"
                      class="add-to-cart py-1 px-6 rounded-full flex items-center font-bold">
                      <span>+</span>
                      <span class="ml-4">Add</span>
                  </button>
